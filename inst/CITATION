citHeader("To cite coop in a publication use:")

citEntry(
  entry = "Misc",
  title = "{Co-Opeartion}: Fast Correlation, Covariance, and Cosine Similarity",
  author = personList(as.person("Drew Schmidt")),
  year = "2016",
  note = "{R} Package",
  url = "http://cran.r-project.org/package=coop",
  textVersion = "Schmidt, D. (2016) coop: Fast Correlation, Covariance, and Cosine Similarity. R Package, URL http://cran.r-project.org/package=coop",
  key = "coop2016"
)

