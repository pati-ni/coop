  entry = "Misc",
  title = "{Co-Operation}: Fast Correlation, Covariance, and Cosine Similarity",
  author = person("Drew", "Schmidt"),
  year = year,
  note = note,
  url = "https://cran.r-project.org/package=coop",
  textVersion = NULL,
  key = "coop2016"
)

